<div class='container'>
  <div class='page-header'>
    <div class='text-center'>
      <h3>Create a Movie Party for <%= @movie.title %></h3>

      <%= button_to 'Discover Page', user_discover_index_path(@user), method: :get, class: 'btn-default' %>

      <h3>Viewing Party Details</h3>
    </div>
  </div>
  Movie Title: <%= @movie.title %>
  <%= form_with model: [@user, :movie, @viewing_party], local: true do |form| %>
    <div class='form-group'>
      <%= form.label :duration, 'Duration of Party:' %>
      <%= form.number_field :duration, value: @movie.runtime, min: @movie.runtime, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= form.label :date, 'Day:' %>
      <%= form.date_field :date, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= form.label :start_time, 'Start Time:' %>
      <%= form.time_field :start_time, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <h4>Invite Other Users</h4>
      <% @users.each do |user| %>
        <div class='checkbox'>
          <%= form.check_box :"#{user.id}" %>
          <%= form.label :"#{user.id}", "#{user.name} (#{user.email})" %>
        </div>
      <% end %>
    </div>
    <%= form.submit value: 'Create Viewing Party', class: 'btn btn-default' %>
  <% end %>
</div>
